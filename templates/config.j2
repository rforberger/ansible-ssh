{% for h in item['all'] %}
Host {{ h | basename }} {{ h }}
  User localadmin
  TCPKeepAlive yes
  ForwardX11 no
  ServerAliveInterval 5
  ServerAliveCountMax 2
  Compression yes
  ForwardAgent yes
  Port {{ hostvars[h]['ansible_port'] }}

{% endfor %}

Host *
  TCPKeepAlive yes
  ForwardX11 no
  ServerAliveInterval 5
  ServerAliveCountMax 2
  Compression yes
